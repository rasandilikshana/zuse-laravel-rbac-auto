{
    "name": "zuse/laravel-rbac-auto",
    "description": "Automated Laravel integration package for Zuse RBAC - Automates the complete 12-step integration process",
    "keywords": ["laravel", "rbac", "keycloak", "authentication", "zuse", "automation", "integration"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Zuse Technologies",
            "email": "dev@zuse.lk"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Zuse\\LaravelRbacAuto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zuse\\LaravelRbacAuto\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zuse\\LaravelRbacAuto\\ZuseRbacAutoServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}